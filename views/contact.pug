extends base.pug    
//- Extentds is used to use template of already existing pug and update info in it


block style 
  style 
    include  ../static/style.css
    include ../static/styleContact.css

block content 
   div.container
      h1 Contact Us 
      form(action="/contact" , ,method="post",class="myform")
        input(type="text" ,name="name",class="myInput",placeholder="Enter your name" ,required) 
        input(type="text" ,name="email",class="myInput",placeholder="ex:myname@example.com",required) 
        input(type="text" ,name="age",class="myInput",placeholder="Enter your age",required) 
        input(type="text" ,name="gender",class="myInput",placeholder="Enter your gender",required) 
        input(type="text" ,name="contact",class="myInput",placeholder="Enter your contact number",required) 
        button#btn
           |Submit
        script
          include ../static/index.js